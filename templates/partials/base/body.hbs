{{!--
    This partial renders the <body> of the HTML page.
    @api public
--}}

{{> base/sidebar}}

<content>
  <h1 id="{{htmlId info.title}}">{{info.title}}</h1>
  <p class="sw-info">Version <span class="sw-info-version">{{info.version}}</span></p>
  <p>{{md info.description}}</p>

  {{#each topics}}
    <div class="oa-topic">
      <h2 class="oa-section-header" id="topic-{{htmlId info.title}}">{{info.title}}</h2>

      <section class="oa-section col-md-6">
        {{md info.description}}
      </section>

      {{>reference/parameterDefinitions parameters=parameters}}

      {{>reference/responseDefinitions responses=responses}}

      {{>reference/definitions definitions=definitions}}
    </div>
  {{/each}}

  {{#each areas}}
    <div class="oa-area">
      <h2 class="oa-section-header" id="area-{{htmlId info.title}}">{{info.title}}</h2>

      <section class="oa-section col-md-6">
        {{md info.description}}
      </section>

      {{>reference/paths paths=paths basePath=basePath}}

      {{>reference/parameterDefinitions parameters=parameters}}

      {{>reference/responseDefinitions responses=responses}}

      {{>reference/definitions definitions=definitions}}
    </div>
  {{/each}}

</content>
